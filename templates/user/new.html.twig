{% extends 'base.html.twig' %}

{% block title %}New Utilisateur{% endblock %}

{% block body %}
<h1>Create new Utilisateur</h1>

{{ form_start(form, {'attr': {'id': 'new_edit_user'}}) }}

        <div class="row">
                <div class="col-12">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email) }}
                </div>
                <div class="col-12">
                        {{ form_label(form.password) }}
                        {{ form_widget(form.password) }}
                </div>
                <div class="col-12">
                        {{ form_label(form.Lastname) }}
                        {{ form_widget(form.Lastname) }}
                </div>
                <div class="col-12">
                        {{ form_label(form.Firstname) }}
                        {{ form_widget(form.Firstname) }}
                </div>
                
                <div class="col-12">
                        <label for="verifpass">Saisir une seconde fois le mot de passe</label>
                        <input type="password" id="verifpass" required>
                </div>
        </div>
        <button class="btn btn-success">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}

<a href="{{ path('user_index') }}">back to list</a>
{% endblock %}